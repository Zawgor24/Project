.conteiner
  p.text-right
        | Article â„–#{ @article.id }
        br
        - if policy(@article).edit?
          = link_to t('articles.edit'), edit_article_path(@article),
            class: 'btn btn-warning mr-2'

        - if policy(@article).destroy?
          = link_to t('articles.delete'), @article, method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
  .leftimg
    = show_image(@article)

  h3
    = @article.title

  h5
    = @article.body

h3 Comments

= render @article.comments
= render partial: 'comments/form', locals: { commentable: @article }

= link_to 'Back', :back
